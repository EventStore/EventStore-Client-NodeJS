{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "importsNotUsedAsValues": "error",
    "outDir": "./dist"
  },
  "include": ["./src", "./generated"],
  "exclude": ["**/*.test.ts", "**/__test__/**/*"]
}
