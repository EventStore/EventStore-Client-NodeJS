{
  "name": "kurrent-node-client-repository",
  "private": true,
  "version": "1.0.0",
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "build": "nx run-many --target=build",
    "build:ts": "nx run-many --target=build:ts",
    "build:watch": "nx run-many --target=build:watch --parallel",
    "lint": "nx run-many --target=lint:prettier && nx run-many --target=lint:eslint",
    "lint:prettier": "prettier --check \"packages/*/src/**/**/!(*.d).{ts,json}\"",
    "lint:eslint": "eslint \"packages/*/src/**/*.ts\"",
    "prettier:fix": "prettier --write \"packages/*/src/**/**/!(*.d).{ts,json}\"",
    "clean": "nx run-many --target=clean",
    "prepublishOnly": "yarn clean && yarn build && yarn test",
    "test": "nx run @eventstore/test:test"
  },
  "author": "Event Store Limited",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/EventStore/Kurrent-Client-NodeJS/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://developers.kurrent.io/clients/grpc/getting-started?codeLanguage=NodeJS",
  "devDependencies": {
    "@tsconfig/node14": "^14.1.2",
    "@types/node": "^16.18.122",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "^2.8.8",
    "semver": "^7.6.3",
    "typescript": "^4.9.5"
  }
}
